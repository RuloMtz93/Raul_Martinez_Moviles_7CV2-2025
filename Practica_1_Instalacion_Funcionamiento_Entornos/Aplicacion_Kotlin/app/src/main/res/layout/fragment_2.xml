<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Agregar al carrito"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/buttonNormal"
        android:text="Agregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:src="@android:drawable/ic_menu_camera"
        android:contentDescription="Botón imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Descripción del fragment -->
    <TextView
        android:id="@+id/description"
        android:text="Este fragment nos muestra el elemento botón, los botones al presionarlos se puede configurar para realizar diferentes acciones."
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"/>
</LinearLayout>
